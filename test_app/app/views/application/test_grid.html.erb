<%= swift_ui do
  div.p(4) do
    text("Grid Test").text_size("xl").font_weight("bold").mb(4)
    
    text("Before grid")
    
    div.add_class("swift-ui-grid").data(grid_type: "lazy-vgrid") do
      text("Inside grid container")
      
      div.add_class("grid gap-6 grid-cols-2") do
        text("Inside grid")
        
        4.times do |i|
          div.add_class("contents") do
            div.add_class("swift-ui-grid-item") do
              div.bg("gray-100").p(4).rounded.border do
                text("Item #{i + 1}")
              end
            end
          end
        end
      end
    end
    
    text("After grid")
  end
end %>