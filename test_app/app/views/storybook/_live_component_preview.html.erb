<div class="border rounded-lg p-6 bg-white">
  <% if mode == 'interactive' %>
    <div class="mb-3 flex items-center gap-2">
      <div class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
        ðŸŸ¢ Interactive Mode
      </div>
      <% if session_id.present? %>
        <div class="text-xs text-gray-500">
          Session: <%= session_id.to_s[0..7] %>...
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="prose max-w-none" 
       data-controller="live-story"
       data-live-story-story-value="<%= story_name || '' %>"
       data-live-story-variant-value="<%= variant_name || '' %>"
       data-live-story-session-id-value="<%= session_id || '' %>"
       data-live-story-mode-value="<%= mode || 'static' %>">
    
    <%= render component_instance if component_instance %>
    
  </div>

  <% if mode == 'interactive' && session_id.present? %>
    <div class="mt-4 pt-4 border-t border-gray-200">
      <div class="text-xs text-gray-600 flex items-center gap-2">
        <span class="inline-block w-2 h-2 bg-green-400 rounded-full"></span>
        Real-time updates enabled
      </div>
    </div>
  <% end %>
</div>