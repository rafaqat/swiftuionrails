    <%= swift_ui do
      vstack(spacing: 24).p(8).max_w("4xl").mx("auto") do
        text("This should fail")
      end
    end %>
  <% rescue => e %>
    <p style="color: red;">Error: <%= e.message %></p>
  <% end %>
  
