<div class="container mx-auto p-8">
  <h1 class="text-3xl font-bold mb-8">Simple Test Page</h1>
  
  <div class="space-y-8">
    <section>
      <h2 class="text-xl font-semibold mb-4">Test 1: Basic text</h2>
      <%= swift_ui do
        text("Hello from Test 1")
      end %>
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Test 2: Basic vstack</h2>
      <%= swift_ui do
        vstack(spacing: 16) do
          text("First item")
          text("Second item")
          text("Third item")
        end
      end %>
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Test 3: Vstack with padding</h2>
      <%= swift_ui do
        vstack(spacing: 16) do
          text("Padded content")
          text("More padded content")
        end.p(24).bg("gray-100").rounded("lg")
      end %>
    </section>

    <section>
      <h2 class="text-xl font-semibold mb-4">Test 4: Full example</h2>
      <%= swift_ui do
        card(elevation: 2) do
          vstack(spacing: 16) do
            text("Card Title").font_size("xl").font_weight("bold")
            text("This is a full example with a card component")
            hstack(spacing: 8) do
              button("Action 1").button_style(:primary)
              button("Action 2").button_style(:secondary)
            end
          end
        end
      end %>
    </section>
  </div>
</div>